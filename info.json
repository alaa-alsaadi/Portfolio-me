{
  "designSystem": {
    "metadata": {
      "name": "Portfolio Design System",
      "version": "1.0.0",
      "description": "A comprehensive design system for developer portfolio websites with dual theme support",
      "styleApproach": "Clean, minimal, and content-focused with strong typography and subtle interactions"
    },

    "colorPalette": {
      "darkTheme": {
        "primary": {
          "background": "#0a0a0a",
          "backgroundSecondary": "#151515",
          "backgroundTertiary": "#1a1a1a",
          "surface": "#1f1f1f"
        },
        "text": {
          "primary": "#ffffff",
          "secondary": "#b0b0b0",
          "tertiary": "#808080",
          "muted": "#606060"
        },
        "accent": {
          "primary": "#fbbf24",
          "secondary": "#f59e0b",
          "highlight": "#ff6b6b",
          "link": "#60a5fa"
        },
        "interactive": {
          "hover": "rgba(255, 255, 255, 0.1)",
          "pressed": "rgba(255, 255, 255, 0.05)",
          "border": "rgba(255, 255, 255, 0.1)"
        }
      },
      "lightTheme": {
        "primary": {
          "background": "#ffffff",
          "backgroundSecondary": "#f9fafb",
          "backgroundTertiary": "#f3f4f6",
          "surface": "#ffffff"
        },
        "text": {
          "primary": "#111827",
          "secondary": "#4b5563",
          "tertiary": "#6b7280",
          "muted": "#9ca3af"
        },
        "accent": {
          "primary": "#f59e0b",
          "secondary": "#d97706",
          "highlight": "#ef4444",
          "link": "#3b82f6"
        },
        "interactive": {
          "hover": "rgba(0, 0, 0, 0.05)",
          "pressed": "rgba(0, 0, 0, 0.1)",
          "border": "rgba(0, 0, 0, 0.1)"
        }
      }
    },

    "typography": {
      "fontFamilies": {
        "primary": "system-ui, -apple-system, 'Segoe UI', sans-serif",
        "heading": "'Inter', 'SF Pro Display', system-ui, sans-serif",
        "mono": "'JetBrains Mono', 'Fira Code', 'Courier New', monospace",
        "display": "'Space Grotesk', 'Inter', sans-serif"
      },
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem",
        "6xl": "3.75rem",
        "7xl": "4.5rem"
      },
      "fontWeights": {
        "light": 300,
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800
      },
      "lineHeights": {
        "tight": 1.25,
        "snug": 1.375,
        "normal": 1.5,
        "relaxed": 1.625,
        "loose": 2
      },
      "letterSpacing": {
        "tighter": "-0.05em",
        "tight": "-0.025em",
        "normal": "0",
        "wide": "0.025em",
        "wider": "0.05em",
        "widest": "0.1em"
      }
    },

    "spacing": {
      "scale": {
        "0": "0",
        "1": "0.25rem",
        "2": "0.5rem",
        "3": "0.75rem",
        "4": "1rem",
        "5": "1.25rem",
        "6": "1.5rem",
        "8": "2rem",
        "10": "2.5rem",
        "12": "3rem",
        "16": "4rem",
        "20": "5rem",
        "24": "6rem",
        "32": "8rem"
      },
      "containerMaxWidth": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1400px"
      },
      "containerPadding": {
        "mobile": "1rem",
        "tablet": "2rem",
        "desktop": "3rem"
      }
    },

    "borderRadius": {
      "none": "0",
      "sm": "0.25rem",
      "base": "0.375rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem",
      "2xl": "1.5rem",
      "full": "9999px"
    },

    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
      "glow": "0 0 20px rgba(251, 191, 36, 0.3)"
    },

    "components": {
      "navigation": {
        "type": "horizontal-fixed",
        "position": "top",
        "height": "4rem",
        "style": {
          "backdrop": "blur(12px)",
          "background": "rgba(10, 10, 10, 0.8) / rgba(255, 255, 255, 0.8)",
          "border": "bottom-1px-subtle",
          "sticky": true
        },
        "items": {
          "alignment": "center-right",
          "spacing": "2rem",
          "fontSize": "0.875rem",
          "fontWeight": 500,
          "hover": "subtle-accent",
          "active": "accent-color"
        },
        "logo": {
          "position": "left",
          "size": "2.5rem",
          "type": "image-or-text"
        },
        "themeToggle": {
          "position": "far-right",
          "icon": "sun-moon",
          "size": "1.5rem"
        }
      },

      "hero": {
        "layout": "split-content",
        "sections": {
          "left": {
            "content": [
              "avatar",
              "name",
              "title",
              "description",
              "socialLinks",
              "cta"
            ],
            "width": "50%",
            "verticalAlign": "center"
          },
          "right": {
            "content": ["code-preview"],
            "width": "50%",
            "style": "elevated-card"
          }
        },
        "avatar": {
          "size": "10rem",
          "shape": "circle",
          "border": "2px-solid-subtle",
          "position": "top-left"
        },
        "name": {
          "fontSize": "4xl-5xl",
          "fontWeight": "extrabold",
          "color": "accent-gradient",
          "letterSpacing": "tight",
          "lineHeight": "tight"
        },
        "title": {
          "fontSize": "lg-xl",
          "fontWeight": "normal",
          "color": "text-secondary",
          "marginTop": "0.5rem"
        },
        "description": {
          "fontSize": "base",
          "color": "text-tertiary",
          "lineHeight": "relaxed",
          "marginTop": "1rem",
          "maxWidth": "600px"
        },
        "codePreview": {
          "style": "syntax-highlighted",
          "background": "surface-elevated",
          "padding": "1.5rem",
          "borderRadius": "lg",
          "fontSize": "sm",
          "fontFamily": "mono"
        },
        "stats": {
          "display": "inline-badges",
          "items": ["experience-years", "github-stars"],
          "style": "subtle-background",
          "iconPosition": "left"
        }
      },

      "projectCard": {
        "layout": "vertical",
        "aspectRatio": "16:9",
        "style": {
          "background": "surface",
          "borderRadius": "xl",
          "overflow": "hidden",
          "transition": "transform 0.3s, shadow 0.3s",
          "hover": {
            "transform": "translateY(-4px)",
            "shadow": "xl"
          }
        },
        "thumbnail": {
          "position": "top",
          "height": "65%",
          "objectFit": "cover",
          "overlay": "gradient-fade"
        },
        "content": {
          "padding": "1.5rem",
          "height": "35%"
        },
        "title": {
          "fontSize": "xl",
          "fontWeight": "bold",
          "marginBottom": "0.5rem",
          "color": "text-primary"
        },
        "description": {
          "fontSize": "sm",
          "color": "text-secondary",
          "lineHeight": "relaxed",
          "lines": 2,
          "overflow": "ellipsis"
        },
        "arrow": {
          "position": "bottom-right",
          "size": "2rem",
          "style": "circle-background",
          "hover": "slide-diagonal"
        }
      },

      "projectGrid": {
        "display": "grid",
        "columns": {
          "mobile": 1,
          "tablet": 2,
          "desktop": 3
        },
        "gap": "2rem",
        "marginTop": "3rem"
      },

      "sectionHeader": {
        "fontSize": "3xl-4xl",
        "fontWeight": "bold",
        "textTransform": "uppercase",
        "letterSpacing": "wide",
        "marginBottom": "1rem",
        "color": "text-primary"
      },

      "sectionDescription": {
        "fontSize": "base-lg",
        "color": "text-secondary",
        "lineHeight": "relaxed",
        "marginBottom": "2rem",
        "maxWidth": "800px"
      },

      "button": {
        "primary": {
          "background": "transparent",
          "border": "1px-solid",
          "borderColor": "text-primary",
          "color": "text-primary",
          "padding": "0.75rem 1.5rem",
          "borderRadius": "md",
          "fontSize": "sm",
          "fontWeight": "medium",
          "transition": "all 0.2s",
          "hover": {
            "background": "text-primary",
            "color": "background"
          }
        },
        "link": {
          "color": "accent-primary",
          "textDecoration": "none",
          "fontSize": "sm",
          "fontWeight": "medium",
          "hover": {
            "textDecoration": "underline"
          }
        }
      },

      "socialLinks": {
        "display": "flex",
        "gap": "1rem",
        "marginTop": "1.5rem",
        "items": {
          "size": "1.5rem",
          "color": "text-secondary",
          "hover": {
            "color": "accent-primary"
          }
        }
      },

      "technologyIcons": {
        "display": "flex",
        "gap": "2rem",
        "items": {
          "size": "3rem",
          "grayscale": true,
          "opacity": 0.7,
          "hover": {
            "grayscale": false,
            "opacity": 1
          }
        }
      },

      "blogCard": {
        "layout": "horizontal-compact",
        "style": {
          "background": "transparent",
          "borderRadius": "lg",
          "padding": "1.5rem",
          "hover": {
            "background": "surface-subtle"
          }
        },
        "date": {
          "fontSize": "xs",
          "color": "text-muted",
          "textTransform": "uppercase",
          "letterSpacing": "wide"
        },
        "title": {
          "fontSize": "lg-xl",
          "fontWeight": "semibold",
          "marginTop": "0.5rem",
          "color": "text-primary"
        },
        "tags": {
          "display": "inline-flex",
          "gap": "0.5rem",
          "marginTop": "0.75rem",
          "style": {
            "fontSize": "xs",
            "padding": "0.25rem 0.75rem",
            "borderRadius": "full",
            "background": "surface-subtle",
            "color": "text-secondary"
          }
        },
        "cta": {
          "marginTop": "1rem",
          "color": "accent-primary",
          "fontSize": "sm",
          "fontWeight": "medium"
        }
      },

      "timelineItem": {
        "layout": "horizontal-with-icon",
        "icon": {
          "size": "3rem",
          "position": "left",
          "background": "surface",
          "borderRadius": "lg"
        },
        "content": {
          "marginLeft": "1rem"
        },
        "company": {
          "fontSize": "lg",
          "fontWeight": "semibold",
          "color": "text-primary"
        },
        "role": {
          "fontSize": "sm",
          "color": "text-secondary",
          "marginTop": "0.25rem"
        },
        "period": {
          "fontSize": "xs",
          "color": "text-muted",
          "marginTop": "0.25rem"
        }
      },

      "footer": {
        "background": "background",
        "borderTop": "1px-subtle",
        "padding": "2rem",
        "textAlign": "center",
        "navigation": {
          "display": "flex",
          "justifyContent": "center",
          "gap": "2rem",
          "marginBottom": "1rem",
          "fontSize": "sm"
        },
        "copyright": {
          "fontSize": "xs",
          "color": "text-muted"
        }
      }
    },

    "animations": {
      "pageTransition": {
        "duration": "0.3s",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "hover": {
        "duration": "0.2s",
        "easing": "ease-in-out"
      },
      "fadeIn": {
        "duration": "0.6s",
        "easing": "ease-out"
      },
      "slideUp": {
        "duration": "0.6s",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
        "translate": "0, 20px"
      }
    },

    "layout": {
      "pageStructure": {
        "sections": [
          "navigation",
          "hero",
          "projects",
          "blog",
          "experience",
          "footer"
        ],
        "sectionSpacing": "8rem",
        "sectionPadding": {
          "mobile": "2rem",
          "desktop": "4rem"
        }
      },
      "contentWidth": {
        "narrow": "720px",
        "standard": "1200px",
        "wide": "1400px"
      }
    },

    "responsiveBreakpoints": {
      "mobile": "320px",
      "mobileLarge": "480px",
      "tablet": "768px",
      "desktop": "1024px",
      "desktopLarge": "1280px",
      "desktopXL": "1536px"
    },

    "designPrinciples": [
      "Content-first approach with clear hierarchy",
      "Generous whitespace for breathing room",
      "Subtle interactions that enhance without distracting",
      "Consistent use of accent colors for emphasis",
      "Dark theme as default with smooth light theme toggle",
      "Mobile-first responsive design",
      "Performance-optimized with minimal dependencies",
      "Accessibility-first with proper contrast and semantic HTML",
      "Typography-driven design with strong font hierarchy",
      "Card-based layouts with subtle elevation and hover effects"
    ],

    "interactionPatterns": {
      "cardHover": "Lift effect with shadow increase",
      "buttonHover": "Background fill transition",
      "linkHover": "Color transition to accent",
      "navigationActive": "Underline or accent color",
      "imageHover": "Slight scale increase",
      "themeToggle": "Smooth color transition across all elements"
    }
  }
}
